<div class="jumbotron">
  <h1 class="display-4">GreatReads</h1>
    <hr class="my-4">

    <h2 class="lead">Deciding what to read next?</h2>
      <%= link_to 'Books', controller: "books" %>

    <h2 class="lead">Find your favorite author</h2>
      <%= link_to 'Authors', controller: "authors" %>
    <hr />

    <h2>Searching by tags:</h2>
      <%= form_tag books_path, method: :get do %>
      <div class="input-group">
        <%= text_field_tag :q, params[:q], class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", name: nil, class: "btn btn-dark" %>
        </span>
      </div>
    <% end %>
</div>
