<%= form_for @book do |f| %>
  <%= render 'common/errors', model: @book %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
   <%= f.collection_check_boxes :author_ids, Author.all, :id, :name %>
 </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :pages %>
    <%= f.text_field :pages %>
  </p>
  <p>
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </p>
  <p>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </p>
  <p>
    <%= f.label :language %>
    <%= f.text_field :language %>
  </p>
  <p>
   <%= f.label :tags %><br>
   <%= f.text_field :tags %>
 </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
