<div class="jumbotron">
  <h1 class="display-4">GreatReads </h1>

  <p><i>Youâ€™re in the right place. What title are you searching for?</i></p>
    <%= form_tag(books_path, method: :get) do %>
    <div class="input-group">
      <%= text_field_tag :title, params[:title] %>
      <span class="input-group-btn">
        <%= submit_tag "Search", name: nil, class: "btn btn-dark"  %>
      </span>
    </div>
    <% end %>

  <hr class="my-4">
    <%= link_to "Add book", "/books/new" %>
  <hr />
</div>

  <h2> Meet your favorite book...</h2>
    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Best books</th>
          <th>Rating</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><i><%= link_to book.title, book_path(book) %></i></td>
          <td><%= book.average_rating&.round(1) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
