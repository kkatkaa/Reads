<h1><i>GreatReads helps you keep track of books you want to read</i></h2>
  <h2><%= @book.title %></h2>
    <p>
      <strong>Author</strong>
        <% @book.authors.each do |author| %>
          <%= link_to author.name, author_path(author) %>
        <% end %>
    </p>
  <hr />

      <p><%= @book.description %></p>
      <p>Pages: <%= @book.pages %></p>
      <p>Published: <%= @book.date %></p>
      <p>ISBN: <%= @book.isbn %></p>
      <p>Edition language: <%= @book.language %></p>

      <p>
        <strong> Tags:</strong>
        <% @book.tags.each do |t| %>
          <%=link_to t, books_path(q: t), class: "badge badge-dark"%>
        <% end %>
      </p>
      <p>Created by: <%= @book.user.email %></p>
  <hr />

  <h2> Comments </h2>
    <%= render @book.comments %>
      <% if current_user %>
        <%=render 'comments/form' %>
      <%end%>

      <p><%= link_to 'Edit this book', edit_book_path(@book) %></p>
