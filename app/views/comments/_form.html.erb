<div class="container-fluid">
  <%= render 'common/errors', model: @comment %>
  <%= form_for [@book, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="form-group">
     <%= f.label :rating %><br>
     <%= f.text_field :rating, class: 'form-control' %>
   </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
