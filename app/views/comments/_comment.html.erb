<div class="form-group">
  <strong>Commenter:</strong>
  <%= comment.user.email %>
</div>

<div class="form-group">
  <%= simple_format(comment.body) %>
</div>

<div class="form-group">
  <strong>Rate:</strong>
  <%= comment.rating %>
</div>

 <% if comment.user == current_user || current_user&.admin? %>
  <%= link_to 'Destroy', book_comment_path(book_id: comment.book.id, id: comment.id), method: :delete, data: {confirm: 'Are you sure?'} %>
  <%= link_to 'Edit', edit_book_comment_path(book_id: comment.book.id, id: comment.id) %>
<% end %>

  <hr />
